    echo "Upload to S3 completed successfully" >> \${LOG_FILE}
  else
    echo "Upload to S3 failed" >> \${LOG_FILE}
  fi
fi

echo "Knowledge backup process completed at \$(date)" >> \${LOG_FILE}
EOF

